<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="400">
    <alpha
        android:fromAlpha="1.0" android:toAlpha="0.0" />
    <scale
        android:fromXScale="1.0" android:fromYScale="1.0"
        android:toXScale="3.0" android:toYScale="3.0" />
    <translate
        android:fromXDelta="0.0" android:toXDelta="100%p"
        android:fromYDelta="0.0" android:toYDelta="-50%p" />
    <rotate
        android:fromDegrees="0" android:toDegrees="180" />
</set>