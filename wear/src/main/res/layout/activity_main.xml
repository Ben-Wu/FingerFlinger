<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.benwu.fingerflinger.ui.MainActivity"
    tools:deviceIds="wear_square"
    android:background="@color/backgroundDefault">

    <ImageView
        android:id="@+id/mainArrow"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="10dp"
        android:src="@drawable/arrow_up_white"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gameTitleFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_front"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/gameTitleEnd"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_end"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/startButton"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/bg_main_buttons" />

    </LinearLayout>

</RelativeLayout>
